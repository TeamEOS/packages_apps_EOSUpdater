<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.teameos.updater"
    android:versionCode="3"
    android:versionName="2.1" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.REBOOT"/>
    <uses-permission android:name="android.permission.ACCESS_CACHE_FILESYSTEM"/>
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:theme="@style/VanirHoloTheme"
        android:label="@string/app_name"
        android:name="org.teameos.updater.UpdateApplication"
        android:supportsRtl="true">

        <activity
            android:name=".UpdatesSettings"
            android:launchMode="singleTop"
            android:hardwareAccelerated="true"
            android:label="@string/display_name"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:excludeFromRecents="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.android.settings.SHORTCUT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="org.teameos.updater.service.UpdateCheckService" />

        <receiver android:name="org.teameos.updater.receiver.UpdateCheckReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="org.teameos.updater.ACTION_CHECK_FOR_UPDATES" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name="org.teameos.updater.receiver.DownloadReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
                <action android:name="org.teameos.updater.action.START_DOWNLOAD"/>
            </intent-filter>
        </receiver>

        <receiver android:name="org.teameos.updater.receiver.NotificationClickReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_NOTIFICATION_CLICKED"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
